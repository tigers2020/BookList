<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:scaleType="fitCenter"
        android:layout_height="120dp"
        android:id="@+id/book_list_cover_image"
        tools:src="@android:drawable/alert_dark_frame"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="180dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/book_list_title"
            android:ellipsize="end"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:hint="Title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:id="@+id/book_list_sub_title"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/book_list_title"
            android:layout_alignBottom="@id/book_list_title"
            tools:hint="subTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/book_list_published_date"
            tools:hint="publishedDate"/>
    </RelativeLayout>

</LinearLayout>